
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow authenticated users to access their own forms subcollection
      match /forms/{formId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Allow authenticated users to create forms in the main forms collection
    match /forms/{formId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to access their own orders
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }
  }
}
